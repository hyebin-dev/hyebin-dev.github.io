---
interface Props {
  title?: string;
}

const { title = "hyebin-dev — Portfolio & Blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <div class="nav-inner">
        <a href="/" class="logo">
          <span class="logo-mark">h</span>
          <span class="logo-text">hyebin-dev</span>
        </a>

        <nav class="nav-links">
          <a href="/projects">Projects</a>
          <a href="/posts">Posts</a>
          <a href="/about">About</a>
          <a href="/resume">Resume</a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-inner">
        <span>© 2025 hyebin-dev</span>
        <span class="footer-sep">·</span>
        <span>Portfolio & Growth Log</span>
      </div>
    </footer>
  </body>

  <style global>
    :root {
      --bg: #f8fafc;
      --bg-soft: #fdf2ff;
      --bg-card: #ffffff;
      --accent: #a78bfa; /* 연보라 */
      --accent-soft: #ede9fe;
      --accent-pink: #f9a8d4;
      --text-main: #111827;
      --text-muted: #6b7280;
      --border-subtle: #e5e7eb;
      --shadow-soft: 0 10px 25px rgba(148, 163, 184, 0.25);
      --radius-lg: 18px;
      --radius-full: 999px;
      --max-width: 960px;
      --transition-fast: 150ms ease-out;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
        sans-serif;
      color: var(--text-main);
      background: radial-gradient(circle at top, #eef2ff 0, #fdf2ff 35%, #f9fafb 100%);
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    a:focus-visible {
      outline: 2px solid var(--accent);
      outline-offset: 3px;
      border-radius: 6px;
    }

    .site-header {
      position: sticky;
      top: 0;
      z-index: 10;
      backdrop-filter: blur(16px);
      background: linear-gradient(
        to bottom,
        rgba(248, 250, 252, 0.95),
        rgba(248, 250, 252, 0.8),
        transparent
      );
      border-bottom: 1px solid rgba(226, 232, 240, 0.8);
    }

    .nav-inner {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 12px 20px 10px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
    }

    .logo {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 4px 8px;
      border-radius: var(--radius-full);
      background: #ffffff;
      border: 1px solid #e5e7eb;
      box-shadow: 0 6px 18px rgba(148, 163, 184, 0.35);
      transition: transform var(--transition-fast), box-shadow var(--transition-fast),
        border-color var(--transition-fast), background var(--transition-fast);
    }

    .logo-mark {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: radial-gradient(circle at 30% 0, #f9a8d4, #a78bfa);
      color: #ffffff;
      font-size: 13px;
      font-weight: 700;
    }

    .logo-text {
      font-weight: 600;
      font-size: 15px;
      letter-spacing: 0.02em;
    }

    .logo:hover {
      transform: translateY(-1px);
      background: #fefce8;
      border-color: #f9a8d4;
      box-shadow: 0 10px 26px rgba(148, 163, 184, 0.4);
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 14px;
    }

    .nav-links a {
      padding: 6px 12px;
      border-radius: var(--radius-full);
      color: var(--text-muted);
      transition: background var(--transition-fast), color var(--transition-fast),
        transform var(--transition-fast), box-shadow var(--transition-fast);
    }

    .nav-links a:hover {
      background: var(--accent-soft);
      color: var(--text-main);
      box-shadow: 0 6px 14px rgba(167, 139, 250, 0.25);
      transform: translateY(-1px);
    }

    .site-main {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 28px 20px 56px;
    }

    .site-footer {
      border-top: 1px solid rgba(226, 232, 240, 0.9);
      padding: 16px 20px 28px;
      background: linear-gradient(to top, #f9fafb, rgba(249, 250, 251, 0.6));
      font-size: 13px;
      color: var(--text-muted);
    }

    .footer-inner {
      max-width: var(--max-width);
      margin: 0 auto;
      display: flex;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
    }

    .footer-sep {
      opacity: 0.6;
    }

    @media (max-width: 640px) {
      .nav-inner {
        padding-inline: 16px;
      }

      .nav-links {
        font-size: 13px;
        gap: 8px;
      }

      .site-main {
        padding-inline: 16px;
        padding-top: 22px;
      }
    }
  </style>
</html>

