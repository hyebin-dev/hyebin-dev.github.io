---
const { title = "hyebin-dev", description = "" } = Astro.props;
---
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title ? `${title} | hyebin-dev` : "hyebin-dev"}</title>
    <link rel="icon" href="/favicon.svg" />

    <style global>
      :root{ --fg:#1f2937; --muted:#6b7280; --bg:#fff; --link:#6d28d9; --link-hover:#5b21b6; }
      *{ box-sizing:border-box; }
      body{
        margin:0; color:var(--fg); background:var(--bg); line-height:1.75;
        font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,
          'Noto Sans KR','Apple SD Gothic Neo','Malgun Gothic',Arial,sans-serif;
      }
      .container{ max-width:720px; margin:0 auto; padding:24px; }
      header.container{
        display:flex; justify-content:space-between; align-items:center;
        padding-top:18px; padding-bottom:6px;
      }
      .brand{ font-weight:800; text-decoration:none; color:var(--fg); }
      nav a{ margin-left:16px; text-decoration:none; color:var(--fg); border-bottom:1px solid transparent; }
      nav a:hover{ color:var(--link); border-bottom-color:rgba(109,40,217,.4); }

      main.container{ padding-top:40px; padding-bottom:56px; }
      h1,h2,h3{ line-height:1.3; margin:28px 0 12px; }
      h1{ font-size:2rem; font-weight:800; }
      h2{ font-size:1.5rem; font-weight:700; }
      h3{ font-size:1.125rem; font-weight:700; }
      ul{ padding-left:1.2rem; }
      li{ margin:6px 0; }
      a{ color:var(--link); }
      a:hover{ color:var(--link-hover); }
      code{ background:#f3f4f6; padding:0 6px; border-radius:6px; }
      pre{ background:#0b1021; color:#e5e7eb; padding:16px; border-radius:12px; overflow:auto; }
      .postlist li{ margin:.5rem 0; }
      footer.container{ color:var(--muted); font-size:.9rem; padding-top:8px; padding-bottom:32px; }
    </style>
  </head>
  <body>
    <header class="container">
      <a class="brand" href="/">hyebin-dev</a>
      <nav>
        <a href="/projects">Projects</a>
        <a href="/posts">Posts</a>  <!-- /posts/hello-world → /posts 로 수정됨 -->
        <a href="/about">About</a>
        <a href="/resume">Resume</a>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="container">
      © {new Date().getFullYear()} hyebin-dev — Powered by Astro & GitHub Pages
    </footer>
  </body>
</html>
